@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<Lemonade.Web.Models.FeaturesModel>

@{
    Layout = "_Layout.cshtml";
}

@section headerScripts {
    <script src="scripts/angular.min.js"></script>
    <script src="scripts/jquery.signalR-2.2.0.min.js"></script>
    <script src="/signalr/hubs"></script>
    <script src="scripts/lemonade/app.js" type="text/javascript"></script>
    <script src="scripts/lemonade/controller.js" type="text/javascript"></script>
    <script src="scripts/lemonade/lemonade.js" type="text/javascript"></script>
}
<div ng-controller="lemonadeController" ng-app="lemonade">
    <div class="panel panel-danger hide">
        <div class="panel-heading">
            <h3 class="panel-title">Oops..!</h3>
        </div>

        <ul class="list-group">
            <!-- <li class="panel-body list-group-item">Ooops</li>-->
        </ul>
    </div>

    <div class="col-md-4">
        <div class="well">
            <h2>Applications</h2>
            <hr />

            <ul class="list-group" id="application-list">
                <li class="application list-group-item" ng-repeat="application in applications">
                    <a href="/features?applicationId={{application.applicationId}}">{{application.name}}</a>
                    <span class="delete-application-button glyphicon glyphicon-remove btn btn-xs pull-right btn-danger" ng-click="deleteApplication(application.applicationId)"></span>
                </li>
            </ul>

            <hr />

            <div class="input-group">
                <input type="text" name="name" class="form-control" ng-model="applicationName" placeholder="Application name...">
                <span class="input-group-btn"><button ng-click="addApplication(applicationName)" class="btn btn-default btn-md" id="add-application-button">Add</button></span>
            </div>
        </div>
    </div>

    <div class="col-md-8" id="application-form">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Feature Name</th>
                    <th>Start Date</th>
                    <th>Expiration Days</th>
                    <th>Enabled</th>
                </tr>
            </thead>

            <tbody>
                <tr class="feature" ng-repeat="feature in features">
                    <td>
                        <div class="hide" name="applicationId">{{feature.ApplicationId}}</div>
                        {{feature.Name}}
                    </td>
                    <td>{{feature.StartDate}}</td>
                    <td>{{feature.ExpirationDays}}</td>
                    <td>{{feature.IsEnabled}}</td>
                </tr>

                <tr>
                    <td>
                        <input name="applicationId" type="hidden" value="@Model.ApplicationId" form="addFeatureForm" /><input name="name" class="input-sm" form="addFeatureForm" />
                    </td>
                    <td><input name="startDate" class="input-sm" type="date" form="addFeatureForm" /></td>
                    <td><input name="expirationDays" class="input-sm" form="addFeatureForm" /></td>
                    <td><input name="isEnabled" type="checkbox" form="addFeatureForm" /></td>
                </tr>

                <tr />

                <tr>
                    <td />
                    <td />
                    <td />
                    <td colspan="4">
                        <button type="submit" class="btn btn-primary" id="add-feature-button" form="addFeatureForm">
                            <span><i class="glyphicon glyphicon-plus"></i> Add new feature</span>
                        </button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>