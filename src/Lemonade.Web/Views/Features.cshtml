@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase

@{
    Layout = "_Layout.cshtml";
}

<div ng-controller="lemonadeController" ng-app="lemonade" ng-cloak>
    <div class="col-md-4">
        <div class="well">
            <h2>Applications</h2>
            <hr />

            <ul class="list-group" id="application-list">
                <li class="application list-group-item animate" ng-repeat="application in applications">
                    <a href="#" ng-click="selectApplication(application)">{{application.name}}</a>
                    <span class="delete-application-button glyphicon glyphicon-remove btn btn-xs pull-right btn-danger" ng-click="deleteApplication(application.applicationId)"></span>
                </li>
            </ul>

            <hr />

            <div class="input-group">
                <input type="text" name="name" class="form-control" ng-model="applicationName" placeholder="Application name...">
                <span class="input-group-btn"><button ng-click="addApplication(applicationName)" class="btn btn-primary btn-md" id="add-application-button">Add</button></span>
            </div>
        </div>
    </div>

    <div class="col-md-8 animate" ng-show="application != null">
        <h2>{{application.name}} - Features</h2>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Feature Name</th>
                    <th>Start Date</th>
                    <th>Expiration Days</th>
                    <th>Enabled</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                <tr class="feature animate" ng-repeat="feature in features">
                    <td>
                        <div class="hide" name="applicationId">{{feature.applicationId}}</div>
                        <div class="hide" name="featureId">{{feature.featureId}}</div>
                        <a href="#" editable-text="feature.name" onaftersave="updateFeature(feature)">{{feature.name}}</a>
                    </td>
                    <td><a href="#" editable-date="feature.startDate" onaftersave="updateFeature(feature)">{{feature.startDate| date:'dd-MM-yyyy'}}</a></td>
                    <td><a href="#" editable-text="feature.expirationDays" onaftersave="updateFeature(feature)">{{feature.expirationDays}}</a></td>
                    <td><a href="#" editable-checkbox="feature.isEnabled" onaftersave="updateFeature(feature)">{{feature.isEnabled}}</a></td>
                    <td>
                        <div class="btn btn-xs btn-danger glyphicon glyphicon-remove" ng-click="deleteFeature(feature.featureId)"></div>
                    </td>
                </tr>

                <tr>
                    <td>
                        <input name="applicationId" type="hidden" ng-model="newFeature.applicationId"/><input name="name" ng-model="newFeature.Name" class="input-sm"/>
                    </td>
                    <td><input name="startDate" class="input-sm" type="date" ng-model="newFeature.startDate"/></td>
                    <td><input name="expirationDays" class="input-sm" ng-model="newFeature.expirationDays"/></td>
                    <td><input name="isEnabled" type="checkbox" ng-model="newFeature.isEnabled"/></td>
                    <td></td>
                </tr>

                <tr/>

                <tr>
                    <td/>
                    <td/>
                    <td/>
                    <td colspan="4">
                        <button class="btn btn-primary" ng-click="addFeature()">
                            <span><i class="glyphicon glyphicon-plus"></i> Add</span>
                        </button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>