@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase

@{
    Layout = "_Layout.cshtml";
}

@section headerScripts {
    <script src="scripts/angular.min.js"></script>
    <script src="scripts/jquery.signalR-2.2.0.min.js"></script>
    <script src="/signalr/hubs"></script>
    <script src="scripts/lemonade/app.js" type="text/javascript"></script>
    <script src="scripts/lemonade/controller.js" type="text/javascript"></script>
    <script src="scripts/lemonade/lemonade.js" type="text/javascript"></script>
}
<div ng-controller="lemonadeController" ng-app="lemonade">
    <div class="panel panel-danger hide">
        <div class="panel-heading">
            <h3 class="panel-title">Oops..!</h3>
        </div>

        <ul class="list-group">
            <!-- <li class="panel-body list-group-item">Ooops</li>-->
        </ul>
    </div>

    <div class="col-md-4">
        <div class="well">
            <h2>Applications</h2>
            <hr />

            <ul class="list-group" id="application-list">
                <li class="application list-group-item" ng-repeat="application in applications">
                    <a href="#" ng-click="selectApplication(application.applicationId)">{{application.name}}</a>
                    <span class="delete-application-button glyphicon glyphicon-remove btn btn-xs pull-right btn-danger" ng-click="deleteApplication(application.applicationId)"></span>
                </li>
            </ul>

            <hr />

            <div class="input-group">
                <input type="text" name="name" class="form-control" ng-model="applicationName" placeholder="Application name...">
                <span class="input-group-btn"><button ng-click="addApplication(applicationName)" class="btn btn-primary btn-md" id="add-application-button">Add</button></span>
            </div>
        </div>
    </div>

    <div class="col-md-8" id="application-form">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Feature Name</th>
                    <th>Start Date</th>
                    <th>Expiration Days</th>
                    <th>Enabled</th>
                </tr>
            </thead>

            <tbody>
                <tr class="feature" ng-repeat="feature in features">
                    <td>
                        <div class="hide" name="applicationId">{{feature.applicationId}}</div>
                        <div class="hide" name="featureId">{{feature.featureId}}</div>
                        {{feature.name}}
                    </td>
                    <td>{{feature.startDate| date:'dd-MM-yyyy'}}</td>
                    <td>{{feature.expirationDays}}</td>
                    <td>{{feature.isEnabled}}</td>
                </tr>

                <tr>
                    <td>
                        <input name="applicationId" type="hidden" ng-model="newFeature.ApplicationId" /><input name="name" ng-model="newFeature.Name" class="input-sm" />
                    </td>
                    <td><input name="startDate" class="input-sm" type="date" ng-model="newFeature.StartDate" /></td>
                    <td><input name="expirationDays" class="input-sm" ng-model="newFeature.ExpirationDays" /></td>
                    <td><input name="isEnabled" type="checkbox" ng-model="newFeature.IsEnabled" /></td>
                </tr>

                <tr />

                <tr>
                    <td />
                    <td />
                    <td />
                    <td colspan="4">
                        <button class="btn btn-primary" ng-click="addFeature()">
                            <span><i class="glyphicon glyphicon-plus"></i> Add</span>
                        </button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>