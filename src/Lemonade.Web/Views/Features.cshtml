@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<System.Collections.Generic.List<Lemonade.Web.Models.FeatureModel>>

@{
    Layout = "_Layout.cshtml";
}

<div class="col-md-5">
    <div class="well">
        <h2>Applications</h2>
    </div>
</div>

<div class="col-md-7">
    <form action="/edit/" method="post">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Feature Name</th>
                    <th>Value</th>
                </tr>
            </thead>

            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    var feature = Model[i];

                    <tr class="feature">
                        <td>@feature.FeatureName</td>
                        <td>@feature.IsEnabled</td>
                    </tr>
                }
            </tbody>
        </table>
    </form>
</div>