                    </div>

                    <a href="/" class="navbar-brand">Lemonade.</a>
                </div>

                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav">
                        <li><a href="@Url.Content("~/Features")">Features</a></li>
                    </ul>
                </div>
            </div>
        </nav>

        @RenderBody()
